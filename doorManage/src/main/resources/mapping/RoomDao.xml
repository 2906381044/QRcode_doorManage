<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.RoomDao">

	<insert id="save" parameterType="com.entity.Room">
		INSERT INTO dm_room
		(
		room_name,
		status
		) VALUES (
		#{roomName},
		2
		)
	</insert>

	<select id="queryByParams" parameterType="map" resultType="com.entity.Room">
		SELECT id id,room_name roomName,status status FROM dm_room
		<where>
			1 = 1
			<if test="params.name != null and params.name != ''">
				and room_name like concat('%',#{params.name},'%')
			</if>
		</where>
	</select>
	
	<select id="queryById" resultType="com.entity.Room">
		SELECT id id,room_name roomName,status status FROM dm_room
		<where>
			id = #{id}
		</where>
	</select>
	
	<update id="update">
		update dm_room 
		<set>
			room_name = #{roomName}
		</set>
		<where>
			id = #{id}
		</where>
	</update>
	
	<select id="queryAll" resultType="com.entity.Room" >
		SELECT id id,room_name roomName,status status FROM dm_room
	</select>

	<delete id="delete">
		delete from dm_room
		<where>
			id = #{id}
		</where>
	</delete>

</mapper>